mixin icon(name,mod)
    if(mod)
        svg(class="svg-sprite-icon icon-" + name + ' ' + mod)
            use(xlink:href="static/images/sprite/symbol/sprite.svg#" + name)
    else
        svg(class="svg-sprite-icon icon-" + name)
            use(xlink:href="static/images/sprite/symbol/sprite.svg#" + name)

mixin sectionTitle(title, text, icon = false)
    +b.section-title
        if icon 
            +e.I(class=`icon ${icon}`)
            +e.H2.title= title
            +e.text= text
        else
            +e.title= title
            +e.text= text

mixin slider
    .slider
        .swiper-button-prev
        .swiper-button-next
        .swiper-container
            .swiper-wrapper
                each item in content.slider
                    .swiper-slide
                        a(href= item.imageSrc data-fslightbox="gallery")
                            img(src= item.imageSrc alt='')
            .swiper-pagination

